<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/styles.css">
  
        <script src="/socket.io/socket.io.js" defer></script>
  
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js" defer></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" defer></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js" defer></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js">
              defer
        </script>
        <script src="/js/chat.js" defer></script>
        <title>Chat App</title>
        <link rel="icon" href="/img/icon.png">
    </head>

    <body>
        <div class="main-content">
            {{>header}}

            <form id="messageForm">
                <input id="chatInput" placeholder="Type a message..." />
                <button id="sendChat">Send</button>
            </form>
            <button id="sendLocation">Share Location</button>
            <div id="messagesDisplay"></div>
        </div>

        {{>footer}}

        <script id="message-template" type="text/html">
            <div>
                <p>{{message}}</p>
            </div>
        </script>

        
    </body>
</html>
